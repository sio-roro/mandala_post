<% if current_user.already_liked?(mandala) %>
      <%=link_to like_delete_path(mandala.id), class:"like-btn",method: :delete,remote: true do%>
        <i class="fas fa-heart heart1"></i><%= mandala.likes.count %>
      <%end%>
<% else %>
      <%=link_to like_path(mandala.id), class:"like-btn", method: :post,remote: true do%>
        <i class="far fa-heart heart2"></i><%= mandala.likes.count %>
      <%end%>
<% end %>