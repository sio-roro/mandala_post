<div class="sign_in">
  <div class="sign_in-content">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
          
          <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => "form-control", :placeholder => "Name" %>
        </div>
      <div class="field">
        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "E-mail" %>
      </div>

      <div class="field">
        
        
        <%= f.password_field :password, autocomplete: "new-password" , :placeholder => "Password"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field">
       
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Password again" %>
      </div>

      <div class="actions">
        <i class="fas fa-arrow-right"></i><%= f.submit "Sign up" %>
      </div>
    <% end %>

    <div class="user-link">
      <%= render "users/shared/links" %>
    </div>  
  </div>
</div>
